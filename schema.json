{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "playlist": {
            "type": "string"
        },
        "device": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}(-[0-9a-fA-F]{4}){3}-[0-9a-fA-F]{12}$"
        },
        "volume": {
            "type": "integer"
        },
        "pb": {
            "type": "string"
        },
        "pl": {
            "type": "boolean"
        },
        "pfx": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "log": {
            "type": "string"
        },
        "opts": {
            "type": "object",
            "properties": {
                "memstream": {
                    "type": "boolean"
                }
            }
        },
        "shell": {
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "file",
                "args"
            ]
        },
        "extra": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "if": {
                        "type": "object",
                        "properties": {
                            "command": {
                                "type": "string"
                            },
                            "input": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "command"
                        ]
                    },
                    "content": {
                        "type": "array",
                        "items": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "command": {
                                            "type": "string"
                                        },
                                        "input": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "command"
                                    ]
                                }
                            ]
                        }
                    },
                    "break": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "content"
                ]
            }
        }
    },
    "required": [
        "playlist"
    ]
}